package {
    default_applicable_licenses: ["system_extras_libfec_license"],
}

// Added automatically by a large-scale-change
// See: http://go/android-license-faq
license {
    name: "system_extras_libfec_license",
    visibility: [":__subpackages__"],
    license_kinds: [
        "SPDX-license-identifier-Apache-2.0",
    ],
    license_text: [
        "NOTICE",
    ],
}

cc_defaults {
    name: "libfec_default",

    cflags: [
        "-Wall",
        "-Werror",
        "-O3",
        "-D_LARGEFILE64_SOURCE",
    ],

    srcs: [
        "fec_open.cpp",
        "fec_read.cpp",
        "fec_verity.cpp",
        "fec_process.cpp",
    ],

    export_include_dirs: ["include"],
    // Exported header include/fec/io.h includes crypto_utils headers.
    export_shared_lib_headers: ["libcrypto_utils"],

    shared_libs: [
        "libbase",
        "libcrypto",
        "libcrypto_utils",
        "libcutils",
        "libext4_utils",
        "libsquashfs_utils",
    ],

    static_libs: [
        "libfec_rs",
    ],

    target: {
        host: {
            cflags: [
                "-D_GNU_SOURCE",
                "-DFEC_NO_KLOG",
            ],
        },
        host_linux: {
            sanitize: {
                misc_undefined: ["integer"],
            },
        },
    },
}

cc_library {
    name: "libfec",
    defaults: ["libfec_default"],
    host_supported: true,
    ramdisk_available: true,
    vendor_ramdisk_available: true,
    recovery_available: true,

    target: {
        linux: {
            srcs: [
                "avb_utils.cpp",
            ],
            static_libs: [
                "libavb",
            ],
        },

        // libavb isn't available on mac.
        darwin: {
            srcs: [
                "avb_utils_stub.cpp",
            ],
        },
    },
}
