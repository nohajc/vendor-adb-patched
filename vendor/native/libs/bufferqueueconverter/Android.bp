    double_loadable: true,

    srcs: [
        "BufferQueueConverter.cpp",
    ],

    shared_libs: [
        "libgui",
        "libui",
        "libutils",
        "libbinder",
        "libbase",
        "liblog",
    ],
    export_include_dirs: ["include"],
}
