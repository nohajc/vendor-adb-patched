    srcs: [
        "IPermissionController.cpp",
        "PermissionCache.cpp",
        "PermissionController.cpp",
    ],
}

cc_defaults {
    name: "libbinder_common_defaults",
    host_supported: true,

    srcs: [
        "Binder.cpp",
        "BpBinder.cpp",
        "Debug.cpp",
        "FdTrigger.cpp",
        "IInterface.cpp",
        "IResultReceiver.cpp",
        "Parcel.cpp",
